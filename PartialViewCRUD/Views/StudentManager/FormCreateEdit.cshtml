<div class="add-or-edit">
    <h2 class="title"> Thêm mới sinh viên  </h2>
    <hr />
    <div class="row">
        <input type="number" name="id" value="0" class="form-control hidden" readonly />
        <div class="col-md-2">
            <label> Họ và tên </label>
            <input type="text" name="name" value="" class="form-control" />
            <div class="error">

            </div>
        </div>
        <div class="col-md-2">
            <label> Tuổi </label>
            <input type="number" name="age" value="" class="form-control" />
            <div class="error">

            </div>
        </div>
        <div class="col-md-2">
            <label> Địa chỉ  </label>
            <input type="text" name="address" value="" class="form-control" />
            <div class="error">

            </div>
        </div>
        <div class="col-md-2">
            <label> Ngày sinh </label>
            <input type="date" name="birth" value="" class="form-control" />
            <div class="error">

            </div>
        </div>
        <div class="col-md-2">
            <label> Tên lớp  </label>
            <select class="form-control" name="idClass">
                @foreach (var item in (ViewBag.ListClass as IEnumerable<PartialViewCRUD.Models.Class>))
                {
                    <option value="@item.ID"> @item.Name </option>
                }
                
            </select>
        </div>
    </div>
    <br />
    <button class="btn-createEdit btn btn-primary" data-url="/StudentManager/AddOrEdit"> Thêm </button>
    <button class="btn-update btn btn-primary"> Cập nhập </button>
</div>
